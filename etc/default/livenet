# Livenet environment definition


# ZFS POOL or VOLUME

#[zpool]
LNPZFS=z-livenet

#root DATASET for livenet

#[dataset]
LNBOOT=z-livenet/boot
LNIMAGES=z-livenet/images
LNUPDATES=z-livenet/increases
LNBACKUPS=z-livenet/backups
LNLOGS=z-livenet/logs
LNVMS=z-livenet/vms

# folder that contains livenet MOUNT POINT  (MOUNT POINT OF LNPZFS)
# PATH FOR SPECIFIC FUNCTIONS

#[mountpoint]
BOOT=/livenet/boot
IMAGES=/livenet/images
UPDATES=/livenet/updates
BACKUPS=/livenet/backups
LOGS=/livenet/logs
VMS=/livenet/vms

#SOME PARAMETERS DEFAULT 

#[config]
DEFAULTPASSWD=univr
LIVENET_FSTAB=/etc/default/livenet-fstab
INTERFACE=eno1

